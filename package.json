{
  "name": "api-design-node-3",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.ts",
  "scripts": {
    "typecheck": "tsc",
    "build:server:prod": "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "build:server:once": "cross-env NODE_ENV=development webpack --config webpack.config.server.js",
    "dev:server": "npm run build:server:once && npm-run-all --parallel nodemon:prod watch:server",
    "run:dev": "nodemon --exec babel-node --extensions '.ts' ./src/index.ts",
    "nodemon:prod": "cross-env NODE_ENV=development node-dev ./dist/server.prod.js",
    "watch:server": "cross-env NODE_ENV=development webpack --config webpack.config.server.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NandoTheessen/api-design-node-3.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "prettier --write",
        "tsc",
        "git add"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NandoTheessen/api-design-node-3/issues"
  },
  "homepage": "https://github.com/NandoTheessen/api-design-node-3#readme",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "express": "^4.16.4",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/express": "^4.16.0",
    "@types/morgan": "^1.7.35",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "morgan": "^1.9.1",
    "node-dev": "^3.1.3",
    "nodemon": "^1.18.9",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
